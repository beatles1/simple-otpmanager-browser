{
    "manifest_version": 3,
    "name": "Simple OTP Manager Browser Extension",
    "version": "0.2",
  
    "description": "Browser extension to access TOTP and HOTP codes stored in the OTP Manager Nextcloud app",
  
    "icons": {
        "48": "img/icon48.png",
        "96": "img/icon96.png"
    },
  
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],

    "action": {
        "default_icon": "img/icon48.png",
        "default_title": "OTP Manager",
        "default_popup": "popup.html"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "{7bb1f5d8-56c8-4c72-a7b9-0f539a7feefd}"
        }
    }

  }
